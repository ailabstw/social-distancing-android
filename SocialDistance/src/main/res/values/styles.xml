<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="actionOverflowMenuStyle">@style/ActionOverflowMenuStyle</item>
    </style>

    <style name="ActionOverflowMenuStyle" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/popupBackground</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/elevation_toolbar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>

    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/button_width</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="Button.Major">
        <item name="android:background">@drawable/background_button_major</item>
    </style>

    <style name="Button.Major.Red">
        <item name="android:background">@drawable/background_button_major_red</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/background_button_secondary</item>
    </style>

    <style name="Button.Secondary.Light">
        <item name="android:background">@drawable/background_button_secondary_light</item>
    </style>

    <style name="Button.Round" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CornerSize.50percent</item>
    </style>

    <style name="Button.Round.Icon">
        <item name="android:layout_width">@dimen/button_size_round</item>
        <item name="android:layout_height">@dimen/button_size_round</item>
        <item name="android:layout_margin">@dimen/main_margin_horizontal</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/button_icon_size_round</item>
        <item name="iconTintMode">multiply</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize.50percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="tabIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Text.AutoSize">
        <item name="autoSizeMaxTextSize">@dimen/text_size</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_min</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Text.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title.Large">
        <item name="android:textSize">@dimen/text_size_title_large</item>
    </style>

    <style name="Text.Feature">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Feature.Tip">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Feature"></style>

    <style name="Feature.Backdrop">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:alpha">0.6</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Feature.Arrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:background">@drawable/triangle_white_up</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
